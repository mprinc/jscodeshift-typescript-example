{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "allowJs": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "listFiles": false,
    "lib": ["es2017", "dom"]
  },
  "allowSyntheticDefaultImports": true,
  "files": [
    "index.ts",
    "inject-version.ts"
  ],
  "include": [],
  "exclude": ["**/*d.ts"],
  "compileOnSave": false
}
